<!DOCTYPE html>
<html lang="pt">
<head>
    <title>Editar Cliente</title>
</head>
<body>
    <h2>Editar Cliente</h2>
    <% if (messageError) { %>
        <p style="color: red;"><%= messageError %></p>
    <% } %>
    <% if (messageSuccess) { %>
        <p style="color: green;"><%= messageSuccess %></p>
    <% } %>
    <form action="/customers/edit/<%= customer.id %>" method="POST">
        <input type="text" name="name" value="<%= customer.name %>" required>
        <% if (customer.customerInfo) { %>
            <input type="text" name="document" value="<%= customer.customerInfo.document %>" required>
            <input type="email" name="email" value="<%= customer.customerInfo.email %>" required>
            <input type="text" name="phone_number" value="<%= customer.customerInfo.phone_number %>" required>
            <input type="text" name="alt_phone_number" value="<%= customer.customerInfo.alt_phone_number %>">
        <% } %>
        <% if (customer.customerAddress) { %>
            <input type="text" name="postal_code" value="<%= customer.customerAddress.postal_code %>" required>
            <input type="text" name="street" value="<%= customer.customerAddress.street %>" required>
            <input type="text" name="number" value="<%= customer.customerAddress.number %>" required>
            <input type="text" name="neighborhood" value="<%= customer.customerAddress.neighborhood %>" required>
            <input type="text" name="state" value="<%= customer.customerAddress.state %>" required>
        <% } %>
        <button type="submit">Salvar AlteraÃ§Ãµes</button>
    </form>
    <a href="/customers">Voltar</a>
</body>