<!DOCTYPE html>
<html lang="pt">
<head>
    <title>Lista de Fornecedores</title>
</head>
<body>
    <h2>Fornecedores</h2>
    <% if (messageError) { %>
        <p style="color: red;"><%= messageError %></p>
    <% } %>
    <% if (messageSuccess) { %>
        <p style="color: green;"><%= messageSuccess %></p>
    <% } %>
    <ul>
        <% suppliers.forEach(supplier => { %>
            <li>
                <%= supplier.name %>
                <a href="/suppliers/view/<%= supplier.id %>">Visualizar</a>
                <a href="/suppliers/edit/<%= supplier.id %>">Editar</a>
                <form action="/suppliers/delete/<%= supplier.id %>" method="POST" style="display:inline;">
                    <button type="submit">Deletar</button>
                </form>
            </li>
        <% }) %>
    </ul>
    <a href="/suppliers/create">Adicionar Fornecedor</a>
    <a href="/dashboard">Voltar</a>
</body>
</html>