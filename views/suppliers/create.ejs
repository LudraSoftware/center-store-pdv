<div class="bg-white rounded-lg shadow-lg p-6">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-gray-800">Novo Fornecedor</h2>
        <button onclick="goBack()" class="back-button text-gray-600 hover:text-gray-800 transition-colors">
            <i class="fas fa-arrow-left mr-2"></i>Voltar
        </button>
    </div>

    <% if (messageError && messageError != "") { %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
            <span class="block sm:inline"><%= messageError %></span>
        </div>
    <% } %>

    <% if (messageSuccess && messageSuccess != "") { %>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
            <span class="block sm:inline"><%= messageSuccess %></span>
        </div>
    <% } %>

    <form action="/suppliers/create" method="POST" class="space-y-6">
        <div class="bg-gray-50 p-6 rounded-lg">
            <div class="space-y-4">
                <div>
                    <label for="name" class="block text-sm font-medium text-gray-700">Nome do Fornecedor</label>
                    <input type="text" id="name" name="name" required
                        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200"
                        placeholder="Digite o nome do fornecedor">
                </div>
            </div>
        </div>

        <div class="flex justify-end space-x-4 pt-4">
            <button type="button" onclick="window.location.href='/suppliers'"
                class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 transition-colors">
                Cancelar
            </button>
            <button type="submit"
                class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors">
                <i class="fas fa-save mr-2"></i>Salvar Fornecedor
            </button>
        </div>
    </form>
</div>

<script>
    $(document).ready(function() {
        $('form').on('submit', function(e) {
            e.preventDefault();
            
            const name = $('#name').val().trim();
            
            if (!name) {
                Swal.fire({
                    icon: 'error',
                    title: 'Erro!',
                    text: 'O nome do fornecedor é obrigatório!'
                });
                return false;
            }
            
            this.submit();
        });
    });
</script>