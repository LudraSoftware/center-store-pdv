<div class="bg-white rounded-lg shadow-lg p-6">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-gray-800">Detalhes do Produto</h2>
        <div class="flex space-x-4">
            <a href="/products/edit/<%= product.id %>" class="text-yellow-600 hover:text-yellow-700 transition-colors">
                <i class="fas fa-edit mr-2"></i>Editar
            </a>
            <button onclick="goBack()" class="back-button text-gray-600 hover:text-gray-800 transition-colors">
                <i class="fas fa-arrow-left mr-2"></i>Voltar
            </button>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Informações Básicas -->
        <div class="bg-gray-50 p-6 rounded-lg">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Informações Básicas</h3>
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-500">Nome do Produto</label>
                    <p class="mt-1 text-lg text-gray-900"><%= product.name %></p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-500">Fornecedor</label>
                    <p class="mt-1 text-lg text-gray-900">
                        <%= product.supplier ? product.supplier.name : 'Sem fornecedor' %>
                    </p>
                </div>
            </div>
        </div>

        <!-- Informações Financeiras -->
        <div class="bg-gray-50 p-6 rounded-lg">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Informações Financeiras</h3>
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-500">Valor de Custo</label>
                    <p class="mt-1 text-lg text-gray-900">R$ <%= product.cost_value.toFixed(2) %></p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-500">Valor de Venda</label>
                    <p class="mt-1 text-lg text-gray-900">R$ <%= product.sale_value.toFixed(2) %></p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-500">Margem de Lucro</label>
                    <p class="mt-1 text-lg text-green-600">
                        <%= (((product.sale_value - product.cost_value) / product.cost_value) * 100).toFixed(2) %>%
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Informações de Estoque -->
    <div class="mt-6 bg-gray-50 p-6 rounded-lg">
        <h3 class="text-lg font-semibold text-gray-800 mb-4">Informações de Estoque</h3>
        <div class="flex items-center">
            <div class="flex-1">
                <label class="block text-sm font-medium text-gray-500">Quantidade em Estoque</label>
                <p class="mt-1 text-lg">
                    <span class="px-4 py-2 rounded-full <%= product.inventory.quantity > 10 ? 'bg-green-100 text-green-800' : product.inventory.quantity > 0 ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800' %>">
                        <%= product.inventory.quantity %> unidades
                    </span>
                </p>
            </div>
            <div class="flex-1">
                <label class="block text-sm font-medium text-gray-500">Valor Total em Estoque</label>
                <p class="mt-1 text-lg text-gray-900">
                    R$ <%= (product.inventory.quantity * product.cost_value).toFixed(2) %>
                </p>
            </div>
        </div>
    </div>
</div>